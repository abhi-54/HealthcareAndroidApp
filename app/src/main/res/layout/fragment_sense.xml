<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenseFragment"
    android:id="@+id/layoutOfHome">

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Data"
        android:textColor="@color/border"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:textSize="36sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/top1"
        android:layout_below="@+id/topTitle">

        <TextView
            android:id="@+id/textViewMQ1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text=" Garden"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/textViewMQ1"
            android:background="#4CAF50"
            android:text="Normal"
            android:textAlignment="center"
            android:textColor="#393737"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Quality"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewMQ4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQI"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ1"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewMQ2"/>

        <TextView
            android:id="@+id/textViewMQ5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text=" LED Status"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewMQ6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="NA"
            android:textAlignment="center"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textViewMQ5"/>

        <Button
            android:id="@+id/btnMQ1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#8BC34A"
            android:text="ON"
            android:textSize="16sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewMQ2"/>

        <Button
            android:id="@+id/btnMQ2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#F86343"
            android:text="OFF"
            android:textSize="16sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/btnMQ1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top1"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/border"/>

    <RelativeLayout
        android:id="@+id/top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/top1">

        <TextView
            android:id="@+id/textViewDHT1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/colorPrimary"
            android:text=" Room"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDHT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/textViewDHT1"
            android:background="#4CAF50"
            android:text="Normal"
            android:textAlignment="center"
            android:textColor="#393737"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewDHT3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature (C)"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewDHT4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="celsius"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT1"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewDHT2"/>

        <TextView
            android:id="@+id/textViewDHT5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity (%)"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT3"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewDHT6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="percent"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT4"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewDHT2"/>

        <TextView
            android:id="@+id/textViewDHT7"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text=" LED Status"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT5"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewDHT8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="NA"
            android:textAlignment="center"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textViewDHT5"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textViewDHT7"/>

        <Button
            android:id="@+id/btnDHT1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#8BC34A"
            android:text="ON"
            android:textSize="16sp"
            android:layout_below="@+id/textViewDHT6"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewDHT2"/>

        <Button
            android:id="@+id/btnDHT2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#F86343"
            android:text="OFF"
            android:textSize="16sp"
            android:layout_below="@+id/textViewDHT6"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/btnDHT1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/border"/>

</RelativeLayout>